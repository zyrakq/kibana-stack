# Kibana Configuration
KIBANA_VERSION=9.0.2
KIBANA_PASSWORD=kibana_passwd
ELASTICSEARCH_HOSTS=http://elasticsearch:9200

# Production SSL (required for --production)
VIRTUAL_PORT=5601
VIRTUAL_HOST=kibana.example.com
LETSENCRYPT_HOST=kibana.example.com
LETSENCRYPT_EMAIL=jonh-smith@example.com

# Step CA
STEP_CA_TRUST=true

# Keycloak OIDC Configuration (used only with --keycloak flag)
# Configure these variables based on your Keycloak environment:
#
# Development example:
# KEYCLOAK_BASE_URL=http://localhost:8080
# KIBANA_BASE_URL=http://localhost:5601
#
# Production example:
# KEYCLOAK_BASE_URL=https://sso.yourdomain.com
# KIBANA_BASE_URL=https://kibana.yourdomain.com

KEYCLOAK_BASE_URL=http://localhost:8080
KEYCLOAK_REALM=master
KEYCLOAK_CLIENT_ID=kibana
KEYCLOAK_CLIENT_SECRET=your-client-secret-here
KIBANA_BASE_URL=http://localhost:5601

ELASTICSEARCH_HOSTS=https://elastic.example.com